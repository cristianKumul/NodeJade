      block navBar
      - var foo =  title   
        nav(class='navbar navbar-default', role='navigation')
              .container-fluid
                  .navbar-header
                      button(class='navbar-toggle', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                          span.sronly
                          span.icon-bar
                          span.icon-bar
                          span.icon-bar
                      
                  ul(class='nav navbar-nav')
                      li  
                          if foo == 'Index'
                             a(class='navbar-brand',href='/#') HOME
                          else
                             a(href='/#') home
                      li
                          if foo == 'Mapa'
                            a(class='navbar-brand',href='/map') MAP
                          else
                            a(href='/map') map
                      li
                          if foo == 'Test'
                            a(class='navbar-brand',href='/test') TEST
                          else
                            a(href='/test') test
                      li
                          if foo == 'Configurar intervalos'
                            a(class='navbar-brand',href='/send') CONFIGURACIÃ“N
